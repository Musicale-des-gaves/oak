@require "../../theme/colors"

.oak-text-editor
  width: 100%
  border-radius: 4px
  background-color: $color-black-squeeze

  .oak-text-content
    overflow: auto
    height: 120px
    padding: 10px
    font-family: 'Open Sans', Helvetiva, Arial, sans-serif
    font-size: 16px

  .oak-header
    background-color: $color-catskill-white
    border-top-left-radius: 4px
    border-top-right-radius: 4px

    .oak-button
      background:none
      border: none
      width: 24px
      cursor: pointer
