@require "../../theme/colors"
  
  .aspen
    width: 100%
    border-radius: 4px
    background-color: $color-black-squeeze
    .editor
      overflow: auto
      height: 120px
      padding: 10px
      font-family: 'Open Sans', Helvetiva, Arial, sans-serif
      font-size: 16px
    .header
      background-color: $color-catskill-white
      border-top-left-radius: 4px
      border-top-right-radius: 4px
      & .button
        background:none;
        border: none
        width: 24px
        cursor: pointer

