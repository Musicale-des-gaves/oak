@require "../../theme/colors"

.oak-catalogue
  &.opened
    .oak-handle
      transform: rotate(45deg)

  .oak-handle
    display: inline-block
    width: 40px
    height: 40px
    background: $color-link-water
    border-radius: 50%
    position: relative
    cursor: pointer
    transition: transform .1s ease-in-out

    &:hover
      background: $color-catskill-white

    &:before, &:after
      content: ''
      width: 2px
      height: 16px
      position: absolute
      left: 50%
      transform: translate3d(-50%, -50%, 0)
      background: $color-shuttle-gray
      top: 50%

    &:after
      transform: translate3d(-50%, -50%, 0) rotate(90deg)

  .oak-popover
    background: $color-white
    border-radius: 5px
    width: 400px
    min-height: 200px
    text-align: left
    box-shadow: 0 7px 30px 0 rgba($color-hawkes-blue, 0.5)
    z-index: 1
    a
      color: $color-charade
      text-decoration: none

    .oak-groups
      ul.oak-tabs
        list-style: none
        padding: 0
        margin: 0
        border-radius: 5px 5px 0 0
        overflow: hidden
        background: $color-link-water

        li.oak-tab
          background: transparent
          display: inline-block

          a
            display: block
            padding: 10px 20px

          &.active
            background: $color-white

  .oak-components
    display flex
    flex-wrap: wrap
    justify-content: space-between
    padding: 20px

  .oak-item
    width: 45%
    min-height: 40px
    margin-bottom: 20px
    text-align: left
    padding: 5px
    background: $color-black-squeeze
    border-radius: 3px
    border: none
    color: $color-deep-sea-green

    &:hover
      border: 1px solid $color-deep-sea-green
      cursor: pointer

    & i, & span
      vertical-align: middle
