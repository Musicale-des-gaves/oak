@require "../../theme/colors"

.catalogue
  &.opened
    .handle
      transform: rotate(45deg)

  .handle
    display: inline-block
    width: 40px
    height: 40px
    background: $color-link-water
    border-radius: 50%
    position: relative
    cursor: pointer
    transition: transform .1s ease-in-out

    &:before, &:after
      content: ''
      width: 2px
      height: 16px
      position: absolute
      left: 50%
      transform: translate3d(-50%, -50%, 0)
      background: $color-shuttle-gray
      top: 50%

    &:after
      transform: translate3d(-50%, -50%, 0) rotate(90deg)

  .popover
    background: $color-white
    border-radius: 5px
    min-width: 400px
    min-height: 200px
    text-align: left
    box-shadow: 0 7px 30px 0 rgba($color-hawkes-blue, 0.5)
    z-index: 10000

    a
      color: $color-charade
      text-decoration: none

    .groups
      ul.tabs
        list-style: none
        padding: 0
        margin: 0
        border-radius: 5px 5px 0 0
        overflow: hidden
        background: $color-link-water

        li.tab
          background: transparent
          display: inline-block

          a
            display: block
            padding: 10px 20px

          &.active
            background: $color-white
