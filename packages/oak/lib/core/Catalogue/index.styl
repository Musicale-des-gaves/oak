@require "../../theme/colors"

.catalogue
  background: $color-charade
  border-radius: 5px
  min-width: 400px
  min-height: 200px
  text-align: left

  a
    color: $color-white
    text-decoration: none

  .groups
    ul.tabs
      list-style: none
      padding: 0
      margin: 0
      border-radius: 5px 5px 0 0
      overflow: hidden
      background: $color-woodsmoke

      li.tab
        background: transparent
        display: inline-block

        a
          display: block
          padding: 10px 20px

        &.active
          background: $color-charade
