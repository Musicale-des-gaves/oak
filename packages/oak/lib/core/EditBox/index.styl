@require "../../theme/colors"

.oak-edit
  .oak-popper
    width:480px
    min-height: 200px
    background: white
    border: 1px solid #eee
    border-radius: 3px
    border-radius: 0px 3px 3px 3px
    z-index: 1

    &[data-popper-reference-hidden]
      visibility: hidden
      pointer-events: none

  .oak-top
    width: 100%
    text-align: end
    display: flex
    flex-direction: row-reverse
    background-color: $color-tiber
    align-items: center

    & > span
      color: white

    & > a
      color: white

  .oak-flex
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-around

    & > div
      width: 40%
      padding: 10px
