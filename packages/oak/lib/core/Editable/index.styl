@require "../../theme/colors"

.oak-editable
  min-width: 600px
  width: 600px
  max-width: 800px
  background: $color-white
  border-radius: 3px
  border-radius: 0px 3px 3px 3px
  z-index: 200
  box-shadow: 0 7px 30px 0 $color-hawkes-blue

  .oak-editable-buttons
    display: flex
    align-items: center
    justify-content: flex-end
    padding: 20px

    .junipero.button
      margin-left: 20px

    a
      color: $color-woodsmoke
      text-decoration: none

      &:hover
        color: $color-tiber

  .oak-title
    width: 100%
    height: 25px
    background-color: $color-tiber
    display: flex
    align-items: center
    border-radius: 3px 3px 0 0
    color: $color-white
    padding: 0 20px

  .oak-form
    .oak-field
      margin-bottom: 20px

      &:last-child
        margin-bottom: 0

      label
        display: block
        margin-bottom: 5px

      .junipero.field
        width: 100%
        min-width: 0
        display: block

      .oak-fields
        display: flex
        flex-wrap: wrap
        align-items: center
        margin: -5px

        .oak-field
          width: auto
          flex: 1 1 0
          padding: 5px
          margin: 0

  .junipero.button
    --main-color: $color-tiber
    --hover-color: $color-tiber + 20
    --active-color: $color-tiber - 20
    --disabled-color: rgba($color-tiber, .5)
    --shadow-color: rgba($color-tiber, .5)
    --border-color: $color-tiber
    --outline-color: $color-tiber
    cursor: pointer
