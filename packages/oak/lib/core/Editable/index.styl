@require "../../theme/colors"

.oak-editable
  min-width: 600px
  max-width: 800px
  background: $color-white
  border-radius: 3px
  border-radius: 0px 3px 3px 3px
  z-index: 200
  box-shadow: 0 7px 30px 0 $color-hawkes-blue

  .oak-title
    width: 100%
    height: 25px
    background-color: $color-tiber
    display: flex
    align-items: center
    border-radius: 3px 3px 0 0
    color: $color-white
    padding: 0 20px

  .oak-form
    padding: 20px

    .oak-field
      margin-bottom: 20px

      &:last-child
        margin-bottom: 0

      label
        display: block
        margin-bottom: 5px

      .junipero.field
        width: 100%
