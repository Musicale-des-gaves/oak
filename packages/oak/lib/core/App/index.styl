@require "../../theme/colors"

.oak
  font-family: 'Open Sans', Helvetiva, Arial, sans-serif
  font-size: 16px

  *
    box-sizing: border-box

  --oak-main-color: $color-deep-sea-green
  --oak-darker-main-color: $color-deep-sea-green - 20
  --oak-lighter-main-color: $color-deep-sea-green + 20
  --oak-shadow-color: rgba($color-deep-sea-green, .5)
  --oak-active-color: $color-tiber
  --oak-text-color: $color-woodsmoke
  --oak-text-editor-color:  $color-black-squeeze
  --oak-text-editor-toolbar-color: $color-catskill-white
