  .edit 
    float: right
    
    & span
      color: $color-portage
  .popper
    width:480px  
    height: 200px
    background: white;
    border: 1px solid #eee;
    border-radius: 3px
    border-radius: 0px 3px 3px 3px;
    z-index: 1
    &[data-popper-reference-hidden] {
      visibility: hidden;
      pointer-events: none;
    }
  .top
    width: 100%
    text-align: end
    display: flex
    flex-direction: row-reverse
    background-color: #083737
    align-items: center
    & > span
      color: white
    & > a
      color: white

  .flex
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-around;
    & > .item
      width: 40%
      padding: 10px
