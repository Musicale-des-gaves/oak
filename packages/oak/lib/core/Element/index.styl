@require "../../theme/colors"

.oak-element
  position: relative

  &:not(.oak-row)
    &:before, &:after
      content: ''
      display: none
      position: absolute
      left: 0
      width: 100%
      height: 5px
      border-radius: 2px
      background: $color-catskill-white

    &:before
      top: -12px

    &:after
      top: auto
      bottom: -13px

    &.drag-top
      &:before
        display: block

    &.drag-bottom
      &:after
        display: block

    &.dragging
      background: transparent

      .oak-options
        display: none

    &.dragged
      background: $color-catskill-white
      border-radius: 5px

      .oak-inner
        opacity: 0

      .oak-options
        display: none

  &:hover
    > .oak-options
      visibility: visible

  .oak-inner
    border-radius: 5px
    background: $color-link-water
    min-height: 80px
    padding: 10px
    width: 100%

  .oak-options
    position: absolute
    top: 50%
    left: 50%
    transform: translate3d(-50%, -50%, 0)
    visibility: hidden
    align-items: center
    width: auto
    display: flex

    a.oak-option
      &:first-child
        border-radius: 3px 0 0 3px

        &:last-child
          border-radius: 3px

      &:last-child
        border-radius: 0 3px 3px 0
