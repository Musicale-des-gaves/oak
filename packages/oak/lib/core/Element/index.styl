@require "../../theme/colors"

.element
  &.before:before
    width: 100%
    top: 0
    left: 0
    height: 1px
    position: absolute
    content: ""
    display:block
    background: rgba($color-shuttle-gray,0.2)
    box-shadow: 0 -2px 4px 2px rgba($color-shuttle-gray,0.4)

  &.after
    &:after
      width: 100%
      top: 100%
      left: 0
      height: 1px
      position: absolute
      content: ""
      display:block
      background: rgba($color-shuttle-gray,0.2)
      box-shadow: 0 2px 4px 2px rgba($color-shuttle-gray,0.4)

  margin-top: 10px
  margin-bottom: 10px
  margin-left 10px
  margin-right: 10px
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  position: relative;
  & > div
    margin-top:30px
    margin-bottom:30px
  &:not(.row)
    &:hover
      .options
        display: flex
        margin: 0px
    .inner
      border-radius: 5px
      background: $color-link-water
      min-height: 40px
      padding: 10px

  &.row > .options
      top: -25px
      left: 0
      transform: none
      display: flex

      a.option
        &:first-child
          border-radius: 3px 0 0 0
          &:last-child
            border-radius: 3px 3px 0 0
        &:last-child
          border-radius: 0 3px 0 0

  .options
    position: absolute
    top: 50%
    left: 50%
    transform: translate3d(-50%, -50%, 0)
    display: none
    align-items: center
    width: auto
    white-space: nowrap

    a.option
      &:first-child
        border-radius: 3px 0 0 3px

        &:last-child
          border-radius: 3px

      &:last-child
        border-radius: 0 3px 3px 0
