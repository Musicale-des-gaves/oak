@require "../../theme/colors"

.element
  margin-top: 10px
  margin-bottom: 10px
  margin-left 10px
  margin-right: 10px
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  position: relative;
  & > div
    margin-top:30px
    margin-bottom:30px
  &:not(.row)
    &:hover
      .options
        display: flex
        margin: 0px
        visibility: visible

    .inner
      border-radius: 5px
      background: $color-link-water
      min-height: 40px
      padding: 10px

  &.row > .options
      top: -25px
      left: 0
      transform: none
      display: flex

      a.option
        &:first-child
          border-radius: 3px 0 0 0
          &:last-child
            border-radius: 3px 3px 0 0
        &:last-child
          border-radius: 0 3px 0 0

  .options
    position: absolute
    top: 50%
    left: 50%
    transform: translate3d(-50%, -50%, 0)
    visibility: hidden
    align-items: center
    width: auto
    white-space: nowrap

    a.option
      &:first-child
        border-radius: 3px 0 0 3px

        &:last-child
          border-radius: 3px

      &:last-child
        border-radius: 0 3px 3px 0
