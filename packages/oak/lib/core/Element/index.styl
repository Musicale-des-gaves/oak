@require "../../theme/colors"

.element
  position: relative
  margin-bottom: 20px
  margin-left 10px
  margin-right: 10px
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  position: relative;
  & > div
    margin-top:30px
    margin-bottom:40px
  &:hover
    .options
      display: flex

  &:not(.row)
    .inner
      border-radius: 5px
      background: $color-link-water
      min-height: 40px
      padding: 10px

  &.row
    .options
      top: -25px
      left: 0
      transform: none
      display: flex

      a.option
        &:first-child
          border-radius: 3px 0 0 0

          &:last-child
            border-radius: 3px 3px 0 0

        &:last-child
          border-radius: 0 3px 0 0

  .options
    position: absolute
    top: 50%
    left: 50%
    transform: translate3d(-50%, -50%, 0)
    display: none
    align-items: center
    width: auto
    white-space: nowrap

    a.option
      &:first-child
        border-radius: 3px 0 0 3px

        &:last-child
          border-radius: 3px

      &:last-child
        border-radius: 0 3px 3px 0
