@require "../../theme/colors"

.element
  position: relative
  margin-bottom: 20px

  &:hover
    .options
      display: block

  &:not(.row)
    .inner
      border-radius: 5px
      background: $color-link-water
      min-height: 40px
      padding: 10px

  &.row
    .options
      top: -25px
      left: 0
      transform: none
      display: block

      a.option
        &:first-child
          border-radius: 3px 0 0 0

          &:last-child
            border-radius: 3px 3px 0 0

        &:last-child
          border-radius: 0 3px 0 0

  .options
    position: absolute
    top: 50%
    left: 50%
    transform: translate3d(-50%, -50%, 0)
    display: flex
    align-items: center
    width: auto
    display: none

    a.option
      color: $color-white
      flex: 0 1 auto
      background: #8985E6
      display: block
      height: 25px
      line-height: 25px
      min-width: 25px
      text-align: center

      &:first-child
        border-radius: 3px 0 0 3px

        &:last-child
          border-radius: 3px

      &:last-child
        border-radius: 0 3px 3px 0
