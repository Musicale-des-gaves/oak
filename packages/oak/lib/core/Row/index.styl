@require "../../theme/colors"

.row
  min-height: 80px
  margin-top: 30px
  margin-bottom: 40px
  display: flex;
  flex-wrap: wrap
  flex-direction: row;
  position: relative
  .col
    .flex 
      display: flex;
      flex-direction: column;
      flex: 1
      align-items: center
      width:100%
    display: flex
    flex-direction: row
    position: relative
    border-radius: 5px
    background: $color-link-water
    min-height: 40px
    min-width: 150px
    border: 1px solid;
    &:first-child
      border-radius: 0 5px 5px 5px

    & > .content > .element
      &:last-child
        & > .row
          margin-bottom: 10px

      &> .row

        & > .col
          background: $color-white

          & > .content > .element > .row > .col
            background: transparent
            border: 1px solid $color-hawkes-blue

  .addElement
    position: absolute;
    height = 24px
    right: "calc(50% - 20px)" % height
    bottom "calc(50% - %s)" % height

  .mainContent
    background-color:white
    flex: 1
    display: flex
    height:100%
    width:100%
    & > div
      width 100%

  .gutters
    display: flex
    flex: 0 0 auto
    flex-direction: column
    & > .divide
      display: flex
      flex: 1
      align-items: center
    align-items: center
  .border
    text-align: center
    width:100%
    display: flex
    justify-content: center
