@require "../../theme/colors"

.row
  min-height: 80px
  margin-top: 30px
  margin-bottom: 40px
  display: flex;
  flex-wrap: wrap
  flex-direction: row;
  position: relative
  .col
    .flex 
      display: flex;
      flex-direction: row;
      height:100%
    position: relative
    flex: 2;
    border-radius: 5px
    background: $color-link-water
    min-height: 40px
    border: 1px solid;
    &:first-child
      border-radius: 0 5px 5px 5px

    & > .content > .element
      &:last-child
        & > .row
          margin-bottom: 10px

      &> .row

        & > .col
          background: $color-white

          & > .content > .element > .row > .col
            background: transparent
            border: 1px solid $color-hawkes-blue

  .addElement
    position: absolute;
    height = 24px
    right: "calc(50% - 20px)" % height
    bottom "calc(50% - %s)" % height
    &.before
      top: 0
    &.after
      bottom: 0

  .mainContent
    padding: 10px
    flex: 2


  .divide
    position: relative
    height= 12px
    top: 'calc(50% - %s)' % height
    & > .span
     align-content: center
    &.after
      float: right
    &.before
      float: left