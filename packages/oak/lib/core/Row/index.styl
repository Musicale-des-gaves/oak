@require "../../theme/colors"

.row
  margin-top: 30px
  margin-bottom: 40px
  display: flex;
  flex-direction: row;
  .col

    flex: 2;
    border-radius: 5px
    background: $color-link-water
    min-height: 40px
    padding: 10px
    &:first-child
      border-radius: 0 5px 5px 5px

    & > .content > .element
      &:last-child
        & > .row
          margin-bottom: 10px

      &> .row

        & > .col
          background: $color-white

          & > .content > .element > .row > .col
            background: transparent
            border: 1px solid $color-hawkes-blue

  .addElement
    text-align: center
