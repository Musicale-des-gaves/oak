@require "../../theme/colors"

.row
  min-height: 80px
  display: flex
  flex-wrap: wrap
  flex-direction: row
  position: relative

  .col
    .flex 
      display: flex
      flex-direction: column
      flex: 1
      align-items: center
      justify-content: center
      width:100%

    display: flex
    flex-direction: row
    position: relative
    border-radius: 5px

    &:not(:first-child)
      margin-left:10px

    background: $color-link-water
    min-height: 40px
    min-width: 150px

    &:first-child
      border-radius: 0 5px 5px 5px

    & > .content > .element
      &:last-child
        & > .row
          margin-bottom: 10px

      &> .row

        & > .col
          background: $color-white

          & > .content > .element > .row > .col
            background: transparent
            border: 1px solid $color-hawkes-blue

  .mainContent
    background-color:white
    flex: 1
    display: flex
    height:100%
    width:100%
    & > div
      width 100%

  .gutters
    display: flex
    flex: 0 0 auto
    flex-direction: column
    width 25px

    &.right
      align-items: flex-end
      padding-bottom: 24px 

    &.left
      align-items: flex-start

    & > .divide
      display: flex
      flex: 1
      align-items: center

      & > a
        display:flex
        text-decoration: none
        align-items:center
        width: 15px
        height 50px
        background: $color-catskill-white

        & span 
          font-size: 15px
    
    & .top
      display: flex

  .border
    text-align: center
    width:100%
    display: flex
    justify-content: center

  .delete
    color: $color-tiber