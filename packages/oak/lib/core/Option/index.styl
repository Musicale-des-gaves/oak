@require '../../theme/colors'

a.oak-option
  color: $color-white
  flex: 0 1 auto
  background: $color-deep-sea-green
  display: block
  height: 25px
  line-height: 25px
  min-width: 25px
  text-align: center
  text-decoration: none
  font-size:24px

  &:hover
    color: $color-white

  &:hover,
  &.oak-opened
    background: $color-tiber

  &.oak-light
    background-color: transparent
    color: $color-deep-sea-green
