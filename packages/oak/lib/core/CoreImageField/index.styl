@require "../../theme/colors"

.oak-core-image-field.junipero.touchable-zone
  background-size: cover
  background-repeat: no-repeat
  width: 70px
  height: 70px
  overflow: hidden

  .oak-remove
    width: 100%
    height: 100%
    background: rgba($color-black-squeeze, .8)
    display: flex
    align-items: center
    justify-content: center
    opacity: 0

  &:hover
    .oak-remove
      opacity: 1
