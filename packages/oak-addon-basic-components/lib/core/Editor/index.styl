@require "@poool/oak/lib/theme/colors"

.oak-text-editor
  background: $color-black-squeeze
  border-radius: 4px
  width: 100%

  .oak-toolbar
    background: $color-catskill-white
    border-radius: 4px 4px 0 0
    padding: 4px 5px
    display: flex
    align-items: center

    a.oak-toolbar-button
      border-radius: 2px
      display: flex
      margin-right: 5px
      align-items: center
      justify-content: center
      text-decoration: none
      padding: 2px

      &.oak-active
        .oak-icons
          color: $color-woodsmoke

      &.oak-underline
        .oak-icons
          font-size: 18px

      &.oak-text-left
        margin-left: 15px

    .oak-icons
      color: $color-shuttle-gray
      font-size: 20px

    .oak-text-size
      font-size: 14px
      margin-right: 5px

  .oak-text-editable
    box-sizing: border-box
    padding: 10px
    width: 100%

.oak-text-editor-flex
  display: flex
  justify-content: flex-end
  margin-top: 20px

  .oak-validate
    cursor: pointer
    align-items: center
    padding: 10px 15px
    height: 40px
    background: $color-black-squeeze
    border-radius: 3px
    line-height: normal

.junipero.tooltip
  z-index: 1

  .tooltip-inner
    font-size: 12px

  .arrow
    display: none
